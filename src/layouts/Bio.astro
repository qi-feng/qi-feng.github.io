---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE } from "../config";
import { format } from 'date-fns'

export interface Props {
	content: {
		title: string;
		description: string;
		pubDate?: string;
		updatedDate?: string;
		heroImage?: string;
	};
}

const {
	content: { title, description, pubDate, updatedDate, heroImage },
} = Astro.props;
---
<style>
.circular--portrait-nowrap { position: relative; width: 200px; height: 200px; overflow: hidden; border-radius: 50%; margin: 50px;  left:0px; top:0px} 
.circular--portrait { position: relative; width: 200px; height: 200px; overflow: hidden; border-radius: 50%; float: left; margin: 50px; margin-left: 0px;} 
.circular--portrait img { width: 100%; height: auto; }
.nowrap {overflow:hidden; }
</style>

<html lang="en">
	<head>
		<BaseHead title={ `${title} â€” ${SITE_TITLE}` } description={description} />
		<style>
			main p:first-child {
			color: var(--text-light);
			font-size: 1rem;
			}
		</style>
	</head>

	<body>
		<Header title={title} description={description} />
		<main>
			{pubDate && <p><time datetime={format(new Date(pubDate), "yyyy-MM-dd")}>{pubDate}</time></p>}
			{updatedDate && <p>Last updated on <time datetime={format(new Date(updatedDate), "yyyy-MM-dd")}>{updatedDate}</time></p>}
			{heroImage && (
			  <div class="circular--portrait">
				<img
					src={heroImage}
					alt=""
				/>
			 </div>
			)}
			<slot />
		<div class="nowrap"> </main> </div>
		<Footer />
	</body>
</html>
